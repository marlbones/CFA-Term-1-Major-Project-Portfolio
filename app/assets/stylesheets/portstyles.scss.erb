// General
.white-text {
  color: #F5F3F7;
}

.black-text {
  color: #343434;
}


// Intro section
.intro-section {
  background-color: #F5F3F7;
  height: 100vh;
}

.intro-container {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  height: 80vh;
}

.hr-container {
  text-align: center;
}

.hrbc {
  border-color: rgba(198, 201, 206, 0.5);
}


// About section
.about-section {
  background-color: #343434;
  height: 460px;
}

.small-flex-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  height: 560px;
}

.right-section {
  background-image: url("https://res.cloudinary.com/dabq7kxo6/image/upload/v1489290315/Untitledredonev3_tlgg92.png");
  filter: grayscale(30%);
  border-top: 1px solid #343434;
  border-bottom: 1px solid #343434;
  height: 560px;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.white-text-2 {
  color: #F5F3F7;
  padding-left: 30px;
  padding-right: 135.5px;
}


// Education section
.education-section {
  margin-top: 150px;
}

.card {
width: 150px;
height: 150px;
justify-content: center;
align-items: center;
margin-left: 20px;
}


// Spare space
.spare-space {
  background-image: url("https://res.cloudinary.com/dabq7kxo6/image/upload/v1489131604/Portfolio%20Images/Untitledd_geuzyd.jpg");
  filter: grayscale(30%);
  border-top: 1px solid #343434;
  border-bottom: 1px solid #343434;
  height: 260px;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

// Skills section
.skills-intro {
  margin-right: 20px;
  margin-top: 90px;
  text-align: center;
}

.skills-card {
  width: 150px;
  height: 150px;
  justify-content: center;
  align-items: center;
  margin-left: 50px;
}

.skills-text-and-image {
  padding-top: 50px;
}


.flex-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  height: 40vh;
  margin-bottom: 100px;
}

.flex-img {
  display: block;
  object-fit: cover;
  width: 100%;
  height: 100%;
}

.skills-img {
  display: block;
  object-fit: cover;
  width: 100%;
  height: 100%;
}

.skills-text {
  text-align: center;
  margin-top: 20px;
  display: block;
  width: 100%;
}



// Project section
.project-intro-section {
  background-image: url("https://res.cloudinary.com/dabq7kxo6/image/upload/c_scale,w_617/v1489290445/Untitledcredonev2_wchqby.png");
  height: 460px;
  filter: grayscale(30%);
  border-top: 1px solid #343434;
  border-bottom: 1px solid #343434;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.left-section {
  height: 460px;
}

.project-black-bg {
  background-color: #343434;
}

.project-section {
  margin-top: 150px;
  background-color: #343434;
}

.project-flex-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  height: 560px;
}

.atm {
  height: 460px;
  background-image: url("<%= asset_path 'atm-colour.jpg' %>");
  filter: grayscale(100%);
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  transition: .50s ease-in-out;

  display: flex;
  flex-direction: column;
}

.atm:hover {
  filter: grayscale(0%);
}

.trent-tracker {
  height: 460px;
  background-image: url("<%= asset_path 'tracker-colour.jpg' %>");
  filter: grayscale(100%);
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  transition: .50s ease-in-out;

  display: flex;
  flex-direction: column;
}

.trent-tracker:hover {
  filter: grayscale(0%);
}

.grav {
  height: 380px;
  background-image: url("<%= asset_path 'grav-colour.jpg' %>");
  filter: grayscale(100%);
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  transition: .50s ease-in-out;

  display: flex;
  flex-direction: column;
}

.grav:hover {
  filter: grayscale(0%);
}

.project-link:hover {
  text-decoration: none;
}

.atm-info {
  flex-grow: 1;
}

.trent-info {
  flex-grow: 1;
}

.grav-info {
  flex-grow: 1;
}

.project-text {
  padding-left: 20px;
  font-weight: bold;
}


// Philosophy section
.philosophy-section {
  background-color: #F5F3F7;
}

.philosophy-contents {
  height: 560px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}


// Contact section
.contact-picture-section {
  background-image: url("<%= asset_path 'confused.jpg' %>");
  height: 460px;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.contact-info-section {
  height: 460px;
  background-color: #343434;
}

.text-spacing {
  line-height: 30px;
}

.contact-text {
  padding-top: 50px;
  padding-bottom: 10px;
}

.contact-container {
  display: flex;
  flex-wrap: wrap;
}

.contact-card {
  width: 50px;
  height: 50px;
  justify-content: center;
  align-items: center;
}

.contact-img {
  display: block;
  width: 80%;
  height: 80%;
}

.syntax {
  color: red;
  font-size: 84px;
}

/* Medium Devices, Desktops */
 @media only screen and (max-width : 992px) {

   .small-flex-container {
     height: 300px;
   }

   .skills-text-and-image {
     padding-top: 10px;
   }

   .skills-card {
     width: 60px;
     height: 60px;
   }

   .skills-intro {
     text-align: left;
   }

   .flex-container {
     margin-left: -50px;
   }

   .project-flex-container {
     height: 160px;
   }

   .right-section {
     background-image: url("<%= asset_path 'Untitled.jpg' %>");
   }

   .spare-space {
     background-image: url("<%= asset_path 'Untitleddsmallv2' %>");

   }

   .project-intro-section {
     background-image: url("<%= asset_path 'Untitledcredonev4' %>");

   }

 }

 @media only screen and (max-width : 360px) {

.skills-text-and-image {
  padding-top: 0px;
}

.project-flex-container {
  align-items: baseline;
}

.white-text-2{
  line-height: 23px;
  font-size: 16px;
}
 }
